<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/screen_horizontal_offset"
    android:paddingRight="@dimen/screen_horizontal_offset"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <SearchView android:id="@+id/weather_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="@string/label_search_by_city"/>

        <ProgressBar android:id="@+id/weather_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.DeviceDefault.ProgressBar"
            android:visibility="gone"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/label_temperature"/>

        <TextView android:id="@+id/weather_temp"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/label_humidity"/>

        <TextView android:id="@+id/weather_humidity"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/label_pressure"/>

        <TextView android:id="@+id/weather_pressure"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/label_description"/>

        <TextView android:id="@+id/weather_description"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/label_na"/>

        <TextView
            android:paddingTop="@dimen/vertical_spacing"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/label_wind"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/label_speed"/>

        <TextView android:id="@+id/weather_speed"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="6"
            android:text="@string/label_direction"/>

        <TextView android:id="@+id/weather_direction"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="6"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="7"
            android:text="@string/label_gust"/>

        <TextView android:id="@+id/weather_gust"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="7"
            android:text="@string/label_na"/>

        <TextView
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="0"
            android:layout_row="8"
            android:text="@string/label_cloudiness"/>

        <TextView android:id="@+id/weather_cloudiness"
            android:padding="@dimen/square_spacing"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_column="1"
            android:layout_row="8"
            android:text="@string/label_na"/>

    </GridLayout>

</LinearLayout>
